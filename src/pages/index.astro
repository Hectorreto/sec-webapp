---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title="SEC">
	<Header />
	<main>
		<section class="s1">
			<div class="img"></div>
			<div class="text">
				<h1>El éxito está en su genética</h1>
				<h3>¡Participa en las subastas de genética congelada!</h3>
				<a href="" class="btn-secondary">¡Quiero participar!</a>
			</div> 
		</section>
	</main>
</Layout>

<style>
	.s1 {
		height: 730px;
		display: flex;
		align-items: center;
	}
	.img {
		height: 830px;
		width: 100%;
		position: absolute;
		z-index: -1;

		
		transform: scaleX(-1);
		background: linear-gradient(270deg, rgba(0, 0, 0, 0.70) 32.06%, rgba(0, 0, 0, 0.00) 97.7%), url(toro_holstein.jpg), lightgray 50%;		
		background-size: cover;
		background-position: center;
	}
	h1 {
		margin: 0;
		color: white;
		text-wrap: balance;
		
		font-family: Roboto Slab;
		font-size: 64px;
		font-style: normal;
		font-weight: 700;
		line-height: 72px; /* 112.5% */
	}
	h3 {
		margin-top: 16px;
		margin-bottom: 16px;
		color: white;
		text-wrap: balance;
		
		font-family: Roboto Slab;
		font-size: 32px;
		font-style: normal;
		font-weight: 700;
		line-height: 40px; /* 125% */
	}
	.text {
		width: 457px;
		margin-left: 140px;
	}
	a {
		display: inline-block;
	}
</style>
