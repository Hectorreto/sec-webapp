---
import Button from "./Button.astro";
---

<section>
  <div class="img"></div>
  <div class="text">
    <h1>El éxito está en su genética</h1>
    <h3>¡Participa en las subastas de genética congelada!</h3>
		<Button type="secondary" label="¡Quiero participar!" size="L" />
  </div> 
</section>

<style>
	section {
		height: 730px;
		display: flex;
		align-items: center;
	}
	.img {
		height: 830px;
		width: 100%;
		position: absolute;
		z-index: -1;
		
		transform: scaleX(-1);
		background: linear-gradient(270deg, rgba(0, 0, 0, 0.70) 32.06%, rgba(0, 0, 0, 0.00) 97.7%), url(toro_holstein.jpg), lightgray 50%;		
		background-size: cover;
		background-position: center;
	}
	h1 {
		color: white;
	}
	h3 {
		color: white;
	}
	.text {
		width: 457px;
		margin-left: 140px;
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		gap: 16px;
	}
	a {
		display: inline-block;
	}
</style>
